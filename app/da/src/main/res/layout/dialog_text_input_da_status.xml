<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textDialogTextInputDaStatusField"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textColorHint="#8A8A8A"
            app:boxStrokeColor="#A6A6A6"
            app:boxStrokeWidthFocused="1.3dp"
            app:helperTextTextColor="#FFFFFF"
            app:hintTextColor="#A6A6A6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_number_container">
            <EditText
                android:id="@+id/textDialogTextInputDaStatusFieldEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hind_siliguri_font"
                android:gravity="top"
                android:hint="Tell us your status"
                android:inputType="text"
                android:padding="10dp"
                android:maxLength="50"
                android:textColor="@color/text_color_edit_custom"
                android:textColorHighlight="@color/grey_normal"
                android:textColorHint="@color/grey_normal"
                android:textColorLink="@color/grey_normal"
                android:textSize="12sp" />
    </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/textDialogTextInputDaStatusButtonRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:paddingStart="15dp"
                android:backgroundTint="@color/da_busy"
                android:paddingEnd="15dp"
                android:elevation="8dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="5dp"/>
            <Button
                android:id="@+id/textDialogTextInputDaStatusButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:paddingStart="15dp"
                android:backgroundTint="@color/blue"
                android:paddingEnd="15dp"
                android:elevation="8dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>