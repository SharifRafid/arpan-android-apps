<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.fragments.MyIdFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hind_siliguri_font"
            android:gravity="center"
            android:text="DA ID         "
            android:layout_marginEnd="15dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@color/colorPrimary"
            android:padding="2dp"
            android:drawableStart="@drawable/ic_baseline_arrow_back_24"
            android:drawableTint="@color/white"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arpan Delivery Agent"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="16sp"
            android:fontFamily="@font/hind_siliguri_font"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:background="@drawable/da_id_top_bar_bg"/>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/daImageViewProfile"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/ic_baseline_perm_identity_24" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/daNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name : "
                    android:background="#CDCDCD"
                    android:padding="4dp"
                    android:gravity="start"
                    android:textSize="14sp"
                    android:fontFamily="@font/hind_siliguri_font"
                    android:textColor="@color/grey"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/daTypeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agent Type : "
                    android:background="#FFFFFF"
                    android:padding="4dp"
                    android:gravity="start"
                    android:textSize="14sp"
                    android:fontFamily="@font/hind_siliguri_font"
                    android:textColor="@color/grey"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/daBloodGroupTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blood Group : "
                    android:background="#CDCDCD"
                    android:padding="4dp"
                    android:gravity="start"
                    android:textSize="14sp"
                    android:fontFamily="@font/hind_siliguri_font"
                    android:textColor="@color/grey"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/daContactTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact : "
                    android:background="#FFFFFF"
                    android:padding="4dp"
                    android:gravity="start"
                    android:textSize="14sp"
                    android:fontFamily="@font/hind_siliguri_font"
                    android:textColor="@color/grey"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/daBkashTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="bKash : "
                    android:background="#CDCDCD"
                    android:padding="4dp"
                    android:gravity="start"
                    android:textSize="14sp"
                    android:fontFamily="@font/hind_siliguri_font"
                    android:textColor="@color/grey"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/daIdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID: "
            android:padding="10dp"
            android:gravity="center"
            android:textSize="16sp"
            android:fontFamily="@font/hind_siliguri_font"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:background="@drawable/da_id_top_bar_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/qrCodeImageViewID"
                android:layout_width="240dp"
                android:layout_height="240dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>