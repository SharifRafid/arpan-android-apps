<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/bg_color"
  android:fitsSystemWindows="true"
  android:gravity="center_horizontal"
  android:orientation="vertical"
  tools:context=".ui.home.HomeActivity">

  <TextView
    android:id="@+id/title_text_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:drawableStart="@drawable/ic_baseline_arrow_back_24"
    android:drawableTint="@color/white"
    android:fontFamily="@font/hind_siliguri_font"
    android:gravity="center"
    android:padding="10dp"
    android:text="Order Details         "
    android:textColor="@color/white"
    android:textSize="14sp"
    android:textStyle="bold" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingTop="15dp"
    android:paddingEnd="15dp"
    android:paddingBottom="15dp">

    <LinearLayout
      android:id="@+id/orderHistoryProgressBarContainer"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:orientation="vertical"
      android:visibility="gone">

      <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/blue_normal" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/noDataFoundLinearLayoutContainer"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:orientation="vertical"
      android:visibility="gone">

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_error_icon" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/hind_siliguri_font"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/order_not_found"
        android:textColor="@color/text_color_edit_custom"
        android:textColorHint="#6E8697"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/mainOrderDetailsDataContainerLinearLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="top"
      android:orientation="vertical"
      android:visibility="visible">

      <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.core.widget.NestedScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/order_background_stroked"
              android:gravity="center"
              android:orientation="horizontal">

              <TextView
                android:id="@+id/orderIdTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/hind_siliguri_font"
                android:gravity="start"
                android:paddingStart="15dp"
                android:text="Order# ARP1001"
                android:textColor="@color/grey_normal"
                android:textColorHint="#6E8697"
                android:textSize="14sp"
                android:textStyle="bold" />

              <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <TextView
                  android:id="@+id/orderStatusTopButton"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@drawable/order_background_filled"
                  android:fontFamily="@font/hind_siliguri_font"
                  android:gravity="start"
                  android:paddingStart="15dp"
                  android:paddingTop="6dp"
                  android:paddingEnd="15dp"
                  android:paddingBottom="4dp"
                  android:text="PROCESSING"
                  android:textColor="@color/white"
                  android:textColorHint="#6E8697"
                  android:textSize="14sp"
                  android:textStyle="bold" />
              </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:gravity="center"
              android:orientation="horizontal">

              <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight=".50"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <TextView
                  android:id="@+id/orderDateTextView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/order_background_filled"
                  android:fontFamily="@font/hind_siliguri_font"
                  android:gravity="center"
                  android:paddingStart="15dp"
                  android:paddingTop="6dp"
                  android:paddingEnd="15dp"
                  android:paddingBottom="4dp"
                  android:text="Today"
                  android:textColor="@color/white"
                  android:textColorHint="#6E8697"
                  android:textSize="14sp"
                  android:textStyle="bold" />
              </androidx.cardview.widget.CardView>

              <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <TextView
                  android:id="@+id/pickUpTimeTextView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/order_background_filled"
                  android:fontFamily="@font/hind_siliguri_font"
                  android:gravity="center"
                  android:paddingStart="15dp"
                  android:paddingTop="6dp"
                  android:paddingEnd="15dp"
                  android:paddingBottom="4dp"
                  android:text="Now"
                  android:textColor="@color/white"
                  android:textColorHint="#6E8697"
                  android:textSize="14sp"
                  android:textStyle="bold" />
              </androidx.cardview.widget.CardView>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
              style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="8dp"
              android:layout_marginTop="1dp"
              android:layout_marginEnd="8dp"
              android:enabled="false"
              android:hint="নাম">

              <EditText
                android:id="@+id/userNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/hind_siliguri_font"
                android:inputType="textPersonName"
                android:padding="3dp"
                android:textColor="#000"
                android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:layout_marginStart="8dp"
              android:layout_marginTop="1dp"
              android:layout_marginEnd="8dp">

              <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="মোবাইল">

                <EditText
                  android:id="@+id/userMobileEdittext"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:backgroundTint="#fff"
                  android:ems="10"
                  android:enabled="false"
                  android:fontFamily="@font/hind_siliguri_font"
                  android:inputType="phone"
                  android:padding="3dp"
                  android:textColor="#000"
                  android:textSize="14sp" />
              </com.google.android.material.textfield.TextInputLayout>

              <androidx.cardview.widget.CardView
                android:id="@+id/callUserNowImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:padding="5dp"
                app:cardBackgroundColor="@color/grey_normal">

                <ImageView
                  android:layout_width="24dp"
                  android:layout_height="24dp"
                  android:adjustViewBounds="true"
                  android:padding="2dp"
                  android:src="@drawable/ic_baseline_call_24"
                  app:tint="@color/white" />
              </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
              android:id="@+id/recieverMobileNumberContainer"
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:layout_marginStart="8dp"
              android:layout_marginTop="1dp"
              android:layout_marginEnd="8dp"
              android:visibility="gone">

              <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="রিসিভার মোবাইল">

                <EditText
                  android:id="@+id/userReciverMobileEdittext"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:backgroundTint="#fff"
                  android:ems="10"
                  android:enabled="false"
                  android:fontFamily="@font/hind_siliguri_font"
                  android:inputType="phone"
                  android:padding="2dp"
                  android:textColor="#000"
                  android:textSize="12sp" />
              </com.google.android.material.textfield.TextInputLayout>

              <androidx.cardview.widget.CardView
                android:id="@+id/callUserNowReciverImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:padding="5dp"
                app:cardBackgroundColor="@color/grey_normal">

                <ImageView
                  android:layout_width="24dp"
                  android:layout_height="24dp"
                  android:adjustViewBounds="true"
                  android:padding="2dp"
                  android:src="@drawable/ic_baseline_call_24"
                  app:tint="@color/white" />
              </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
              android:id="@+id/userAddressEdittextContainerLayout"
              style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="8dp"
              android:layout_marginTop="1dp"
              android:layout_marginEnd="8dp"
              android:enabled="false"
              android:hint="ঠিকানা"
              android:visibility="gone">

              <EditText
                android:id="@+id/userAddressEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/hind_siliguri_font"
                android:inputType="textMultiLine"
                android:padding="3dp"
                android:textColor="#000"
                android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
              style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="8dp"
              android:layout_marginTop="1dp"
              android:layout_marginEnd="8dp"
              android:enabled="false"
              android:hint="লোকেশন">

              <EditText
                android:id="@+id/userLocationEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/hind_siliguri_font"
                android:inputType="textPersonName"
                android:padding="3dp"
                android:textColor="#000"
                android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.baoyachi.stepview.HorizontalStepView
              android:id="@+id/step_view_order_progress"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/order_history_item_bg_main"
              android:gravity="center"
              android:orientation="vertical">

              <TextView
                android:id="@+id/orderProductsDetailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cart_item_top_text"
                android:fontFamily="@font/hind_siliguri_font"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp"
                android:text="অর্ডার ডিটেইলস"
                android:textColor="@color/divider_text_color_1"
                android:textSize="14sp"
                android:textStyle="bold" />

              <ImageView
                android:id="@+id/orderImagePicture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/loading_image_glide"
                android:visibility="gone" />

              <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/orderTitleEdittextContainerLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="8dp"
                android:enabled="false"
                android:hint="টাইটেল">

                <EditText
                  android:id="@+id/orderTitleEdittext"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:backgroundTint="#fff"
                  android:ems="10"
                  android:enabled="false"
                  android:fontFamily="@font/hind_siliguri_font"
                  android:inputType="textMultiLine"
                  android:padding="3dp"
                  android:textColor="#000"
                  android:textSize="14sp" />
              </com.google.android.material.textfield.TextInputLayout>

              <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/orderNoteEdittextContainerLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="8dp"
                android:enabled="false"
                android:hint="নোট"
                android:visibility="gone">

                <EditText
                  android:id="@+id/orderNoteEdittext"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:backgroundTint="#fff"
                  android:ems="10"
                  android:enabled="false"
                  android:fontFamily="@font/hind_siliguri_font"
                  android:inputType="textMultiLine"
                  android:padding="3dp"
                  android:textColor="#000"
                  android:textSize="14sp" />
              </com.google.android.material.textfield.TextInputLayout>

              <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/orderAdminNoteEdittextContainerLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="8dp"
                android:enabled="false"
                android:hint="অ্যাডমিন নোট"
                android:visibility="gone">

                <EditText
                  android:id="@+id/orderAdminNoteEdittext"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:backgroundTint="#fff"
                  android:ems="10"
                  android:enabled="false"
                  android:fontFamily="@font/hind_siliguri_font"
                  android:inputType="textMultiLine"
                  android:padding="3dp"
                  android:textColor="#000"
                  android:textSize="14sp" />
              </com.google.android.material.textfield.TextInputLayout>

              <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/orderDetailsEdittextContainerLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:enabled="false"
                android:hint="ডিটেইলস">

                <EditText
                  android:id="@+id/orderDetailsEdittext"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:backgroundTint="#fff"
                  android:ems="10"
                  android:enabled="false"
                  android:fontFamily="@font/hind_siliguri_font"
                  android:gravity="top"
                  android:inputType="textMultiLine"
                  android:padding="3dp"
                  android:textColor="#000"
                  android:textSize="14sp" />
              </com.google.android.material.textfield.TextInputLayout>

              <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/orderItemsMainRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:padding="5dp"
                android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:orientation="horizontal"
              android:padding="5dp">

              <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp">

                <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:orientation="vertical">

                  <TextView
                    android:id="@+id/orderTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:enabled="true"
                    android:focusable="true"
                    android:fontFamily="@font/hind_siliguri_font"
                    android:gravity="center"
                    android:longClickable="true"
                    android:padding="4dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textColorHint="#6E8697"
                    android:textIsSelectable="true"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                  <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:enabled="true"
                    android:focusable="true"
                    android:fontFamily="@font/hind_siliguri_font"
                    android:gravity="center"
                    android:longClickable="true"
                    android:padding="4dp"
                    android:text="Total"
                    android:textColor="@color/white"
                    android:textColorHint="#6E8697"
                    android:textIsSelectable="true"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                </LinearLayout>
              </androidx.cardview.widget.CardView>

              <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp">

                <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:orientation="vertical">

                  <TextView
                    android:id="@+id/pickPriceRestaurantText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:enabled="true"
                    android:focusable="true"
                    android:fontFamily="@font/hind_siliguri_font"
                    android:gravity="center"
                    android:longClickable="true"
                    android:padding="4dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textColorHint="#6E8697"
                    android:textIsSelectable="true"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                  <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:enabled="true"
                    android:focusable="true"
                    android:fontFamily="@font/hind_siliguri_font"
                    android:gravity="center"
                    android:longClickable="true"
                    android:padding="4dp"
                    android:text="PU Price"
                    android:textColor="@color/white"
                    android:textColorHint="#6E8697"
                    android:textIsSelectable="true"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                </LinearLayout>
              </androidx.cardview.widget.CardView>

              <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp">

                <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:orientation="vertical">

                  <TextView
                    android:id="@+id/orderDeliveryPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:enabled="true"
                    android:focusable="true"
                    android:fontFamily="@font/hind_siliguri_font"
                    android:gravity="center"
                    android:longClickable="true"
                    android:padding="4dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textColorHint="#6E8697"
                    android:textIsSelectable="true"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                  <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:enabled="true"
                    android:focusable="true"
                    android:fontFamily="@font/hind_siliguri_font"
                    android:gravity="center"
                    android:longClickable="true"
                    android:padding="4dp"
                    android:text="DC"
                    android:textColor="@color/white"
                    android:textColorHint="#6E8697"
                    android:textIsSelectable="true"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                </LinearLayout>
              </androidx.cardview.widget.CardView>

              <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp">

                <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:orientation="vertical">

                  <TextView
                    android:id="@+id/orderDaPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:enabled="true"
                    android:focusable="true"
                    android:fontFamily="@font/hind_siliguri_font"
                    android:gravity="center"
                    android:longClickable="true"
                    android:padding="4dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textColorHint="#6E8697"
                    android:textIsSelectable="true"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                  <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:enabled="true"
                    android:focusable="true"
                    android:fontFamily="@font/hind_siliguri_font"
                    android:gravity="center"
                    android:longClickable="true"
                    android:padding="4dp"
                    android:text="DA"
                    android:textColor="@color/white"
                    android:textColorHint="#6E8697"
                    android:textIsSelectable="true"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                </LinearLayout>
              </androidx.cardview.widget.CardView>

              <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:visibility="gone"
                app:cardCornerRadius="8dp">

                <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:orientation="vertical">

                  <TextView
                    android:id="@+id/orderArpanChargePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:enabled="true"
                    android:focusable="true"
                    android:fontFamily="@font/hind_siliguri_font"
                    android:gravity="center"
                    android:longClickable="true"
                    android:padding="4dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textColorHint="#6E8697"
                    android:textIsSelectable="true"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                  <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:enabled="true"
                    android:focusable="true"
                    android:fontFamily="@font/hind_siliguri_font"
                    android:gravity="center"
                    android:longClickable="true"
                    android:padding="4dp"
                    android:text="Arpan"
                    android:textColor="@color/white"
                    android:textColorHint="#6E8697"
                    android:textIsSelectable="true"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                </LinearLayout>
              </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
              android:id="@+id/linearLayoutCancelReasonContainer"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:background="@drawable/order_history_item_bg_main"
              android:gravity="center"
              android:orientation="vertical"
              android:visibility="gone">

              <TextView
                android:id="@+id/orderCancellationReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cart_item_top_text"
                android:backgroundTint="@color/red_normal"
                android:fontFamily="@font/hind_siliguri_font"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp"
                android:text="অর্ডার ক্যান্সেল হওয়ার কারণ"
                android:textColor="@color/divider_text_color_1"
                android:textSize="14sp"
                android:textStyle="bold" />

              <TextView
                android:id="@+id/orderCancellationReasonDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hind_siliguri_font"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp"
                android:text="আপনার অর্ডারটি আপনি নিজেই ক্যান্সেল করে দিয়েছেন। ধন্যবাদ।"
                android:textColor="@color/grey_normal"
                android:textSize="14sp"
                android:textStyle="bold" />
            </LinearLayout>

            <TextView
              android:id="@+id/appliedPromoCodeButton"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:background="@drawable/price_background_filled"
              android:backgroundTint="@color/grey_normal"
              android:fontFamily="@font/hind_siliguri_font"
              android:gravity="center"
              android:paddingStart="15dp"
              android:paddingTop="8dp"
              android:paddingEnd="15dp"
              android:paddingBottom="8dp"
              android:text="প্রোমো অ্যাড করা হয়েছেঃ MYARPAN"
              android:textColor="@color/white"
              android:textColorHint="#6E8697"
              android:textSize="14sp"
              android:textStyle="bold"
              android:visibility="gone" />
          </LinearLayout>
        </androidx.core.widget.NestedScrollView>
      </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/price_background_filled"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/totalPriceTextViewMain"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:fontFamily="@font/hind_siliguri_font"
          android:gravity="start"
          android:paddingStart="15dp"
          android:paddingTop="8dp"
          android:paddingEnd="15dp"
          android:paddingBottom="8dp"
          android:text="Total : 500+30 = 530৳"
          android:textColor="@color/white"
          android:textColorHint="#6E8697"
          android:textSize="15sp"
          android:textStyle="bold" />

        <TextView
          android:id="@+id/pricePaymentStatusMain"
          android:layout_width="100dp"
          android:layout_height="match_parent"
          android:background="@drawable/payment_mode_bg_rounded"
          android:fontFamily="@font/hind_siliguri_font"
          android:gravity="center"
          android:paddingStart="15dp"
          android:paddingTop="8dp"
          android:paddingEnd="15dp"
          android:paddingBottom="8dp"
          android:text="bKash"
          android:textColor="@color/white"
          android:textColorHint="#6E8697"
          android:textSize="14sp"
          android:textStyle="bold" />
      </LinearLayout>

      <TextView
        android:id="@+id/paymentRequestSentToCustomerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hind_siliguri_font"
        android:gravity="center"
        android:paddingStart="15dp"
        android:text="PAYMENT REQUEST SENT TO CUSTOMER.\n PLEASE WAIT TO RECIEVE BKASH PAYMENT."
        android:textColor="@color/da_busy"
        android:textColorHint="#6E8697"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/cancelOrderButton"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:layout_marginEnd="2dp"
          android:layout_marginBottom="5dp"
          android:layout_weight=".50"
          android:background="@drawable/payment_mode_bg_rounded"
          android:backgroundTint="@color/red_normal"
          android:fontFamily="@font/hind_siliguri_font"
          android:gravity="center"
          android:paddingStart="15dp"
          android:paddingTop="8dp"
          android:paddingEnd="15dp"
          android:paddingBottom="8dp"
          android:text="Reject Order"
          android:textColor="@color/white"
          android:textColorHint="#6E8697"
          android:textSize="14sp"
          android:textStyle="bold"
          android:visibility="gone" />

        <TextView
          android:id="@+id/acceptOrderButton"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:layout_marginBottom="5dp"
          android:layout_weight=".50"
          android:background="@drawable/payment_mode_bg_rounded"
          android:backgroundTint="@color/green_normal"
          android:fontFamily="@font/hind_siliguri_font"
          android:gravity="center"
          android:paddingStart="15dp"
          android:paddingTop="8dp"
          android:paddingEnd="15dp"
          android:paddingBottom="8dp"
          android:text="Accept Order"
          android:textColor="@color/white"
          android:textColorHint="#6E8697"
          android:textSize="14sp"
          android:textStyle="bold"
          android:visibility="gone" />
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</LinearLayout>