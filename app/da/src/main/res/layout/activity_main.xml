<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.auth.MainActivity">
    <LinearLayout
        android:id="@+id/sendCodeLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:visibility="visible"
        android:gravity="center">
        <ImageView
            android:id="@+id/icon_arpan_icon"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:translationY="100dp"
            android:padding="20dp"
            android:elevation="15dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/ic_arpan_logo"
            app:tint="@color/white" />
        <androidx.cardview.widget.CardView
            android:id="@+id/mainLinearView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            android:alpha="0"
            app:cardBackgroundColor="#00292929"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:padding="18dp"
                android:gravity="center">
                <EditText
                    android:id="@+id/edt_phone_number"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:gravity="center"
                    android:padding="15dp"
                    android:hint="@string/enter_phone_number"
                    android:maxLength="11"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="16sp" />
                <Button
                    android:id="@+id/buttonSendOtpFinal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/send_code"
                    android:textSize="14sp"
                    android:textColor="@color/blue"
                    android:paddingStart="15dp"
                    android:backgroundTint="@color/white"
                    android:paddingEnd="15dp"
                    android:elevation="8dp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <ProgressBar
            android:id="@+id/progressSendOtpFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:indeterminateTint="@color/white"
            android:visibility="gone"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/blue"
        app:cardElevation="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:id="@+id/enterCodeLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp"
            android:visibility="gone"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:padding="20dp"
                android:elevation="15dp"
                android:layout_marginBottom="40dp"
                android:src="@drawable/ic_user"
                app:tint="@color/white" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <com.mukesh.OtpView
                    android:id="@+id/otp_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:gravity="center"
                    android:itemBackground="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    app:OtpItemCount="6"
                    android:focusableInTouchMode="true"
                    android:visibility="visible"
                    app:OtpLineColor="@color/white"
                    app:OtpViewType="line"/>
                <Button
                    android:id="@+id/buttonEnterOtpFinal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="Paste"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:onClick="onSubmitCodeButtonClick"
                    android:layout_marginTop="8dp"/>
                <ProgressBar
                    android:id="@+id/progressEnterOtpFinal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminateTint="@color/white"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/otpDidntReciveText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/button_text_color"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:gravity="center"
                    android:text="Didn't recieve the code? Please wait 0s before trying again..."/>

                <Button
                    android:id="@+id/buttonResendOtpFinal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="15dp"
                    android:backgroundTint="@color/white"
                    android:padding="12dp"
                    android:text="Send Code Again"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>