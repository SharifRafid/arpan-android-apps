<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ArpanDelivery" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_normal</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_normal</item>
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
        <!-- TextView Theme -->
        <item name="android:textColor">@color/grey_normal</item>
        <item name="fontFamily">@font/hind_siliguri_font</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="alertDialogStyle">@style/AlertDialogCustom</item>
    </style>
    <style name="Style_TextView">
        <item name="fontFamily">@font/hind_siliguri_font</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="NavigationTheme" parent="Theme.ArpanDelivery">
        <item name="listPreferredItemHeightSmall">36dp</item><!-- menu item height- vary as u need -->
    </style>
    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>
    <style name="ToolBarStyle" parent="ToolBarStyle.Base"/>
    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Spinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:fontFamily">@font/hind_siliguri_font</item>
        <item name="android:textSize">14sp</item>
        <item name="android:divider">#A8A8A8</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/hind_siliguri_font</item>
    </style>
    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut.2" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/alert_dialog_text_color</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/alert_dialog_bg_color</item>
        <item name="android:textColorAlertDialogListItem">@color/alert_dialog_text_color</item>
    </style>
</resources>