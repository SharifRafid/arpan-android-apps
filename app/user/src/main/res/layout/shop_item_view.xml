<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:id="@+id/mainCardView"
    android:background="@drawable/drop_shadow_all_sides"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:layout_margin="6dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:id="@+id/shopImageItem"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/loading_image_glide"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_siliguri_font"
                    android:gravity="center"
                    android:text="অর্পন"
                    android:textStyle="bold"
                    android:textColor="@color/shop_card_text_color_1"
                    android:textSize="14sp"
                    android:padding="6dp"/>
                <TextView
                    android:id="@+id/priceTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_siliguri_font"
                    android:gravity="end"
                    android:text="অর্পন"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textColor="@color/shop_card_text_color_2"
                    android:textSize="12sp"
                    android:padding="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="20dp"
                android:background="@color/grey_normal"/>
            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hind_siliguri_font"
                android:gravity="center"
                android:text="অর্পন"
                android:textStyle="bold"
                android:textColor="@color/shop_card_text_color_1"
                android:textSize="12sp"
                android:padding="6dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>