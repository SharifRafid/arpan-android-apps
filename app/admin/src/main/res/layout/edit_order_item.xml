<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">


        <TextView
            android:id="@+id/orderIDText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_edt_1"
            android:fontFamily="@font/hind_siliguri_font"
            android:gravity="center"
            android:padding="8dp"
            android:text="অর্ডার ইডিট করুন"
            android:textColor="@color/blue_normal"
            android:textColorHint="#6E8697"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/button"
            app:layout_constraintEnd_toStartOf="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="নাম">

            <EditText
                android:id="@+id/nameEdittextEditOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:ems="10"
                android:fontFamily="@font/hind_siliguri_font"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="মোবাইল">

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/phoneEdittextEditOrder"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:ems="10"
                android:fontFamily="@font/hind_siliguri_font"
                android:inputType="phone"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="ঠিকানা">

            <EditText
                android:id="@+id/addressEdittextEditOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:ems="10"
                android:fontFamily="@font/hind_siliguri_font"
                android:inputType="textMultiLine"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="নোট">

            <EditText
                android:id="@+id/noteEdittextEditOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:ems="10"
                android:fontFamily="@font/hind_siliguri_font"
                android:inputType="textMultiLine"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="অ্যাডমিন নোট">

            <EditText
                android:id="@+id/adminNoteEdittextEditOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:ems="10"
                android:fontFamily="@font/hind_siliguri_font"
                android:inputType="textMultiLine"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="ক্যান্সেল করার কারণ">

            <EditText
                android:id="@+id/cancellationReasonEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:ems="10"
                android:fontFamily="@font/hind_siliguri_font"
                android:inputType="textMultiLine"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/titleCustomOrderEdittextEditOrderContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="টাইটেল">

            <EditText
                android:id="@+id/titleCustomOrderEdittextEditOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:ems="10"
                android:fontFamily="@font/hind_siliguri_font"
                android:inputType="textMultiLine"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:id="@+id/detailsCustomOrderEdittextEditOrderContainer"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="ডিটেইলস">

            <EditText
                android:id="@+id/detailsCustomOrderEdittextEditOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:ems="10"
                android:fontFamily="@font/hind_siliguri_font"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:hint="ডেলিভারি চার্জ">

                <EditText
                    android:text="0"
                    android:id="@+id/deliveryChargeTotalEditOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#fff"
                    android:ems="10"
                    android:fontFamily="@font/hind_siliguri_font"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:hint="ডি এ চার্জ">

                <EditText
                    android:id="@+id/daChargeTotalEditOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#fff"
                    android:ems="10"
                    android:fontFamily="@font/hind_siliguri_font"
                    android:inputType="number"
                    android:text="0"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/totalChargeEdittextEditOrderContainer"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:hint="টোটাল চার্জ">

                <EditText
                    android:id="@+id/totalChargeEdittextEditOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#fff"
                    android:ems="10"
                    android:fontFamily="@font/hind_siliguri_font"
                    android:inputType="number"
                    android:padding="5dp"
                    android:text="0"
                    android:textColor="#000"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hind_siliguri_font"
            android:gravity="center"
            android:padding="5dp"
            android:visibility="gone"
            android:text="Image Size"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progress_circular"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/blue"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginRight="50dp">
            <TextView
                android:id="@+id/saveNowEditOrderButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="সেভ করুন"
                android:gravity="center"
                android:background="@color/grey"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/hind_siliguri_font"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>