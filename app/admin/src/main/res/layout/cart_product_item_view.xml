<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="13dp"
    android:layout_margin="2dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/cart_item_bg_main"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/productsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hind_siliguri_font"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:text=""
            android:textColor="@color/divider_text_color_1"
            android:textSize="14sp"
            android:padding="4dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/orderStatusContainerLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@+id/materialCardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <TextView
                        android:id="@+id/ordersTotalTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:visibility="visible"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/hind_siliguri_font"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#000000"
                        android:textColorHint="#6E8697"
                        android:textSize="22sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/hind_siliguri_font"
                        android:gravity="center"
                        android:text="Orders"
                        android:textColor="#000000"
                        android:textColorHint="#6E8697"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:visibility="visible"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@+id/materialCardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <TextView
                        android:id="@+id/totalIncomeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:visibility="visible"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/hind_siliguri_font"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#000000"
                        android:textColorHint="#6E8697"
                        android:textSize="22sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/totalIncomeTextViewBottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/hind_siliguri_font"
                        android:gravity="center"
                        android:text="Income"
                        android:textColor="#000000"
                        android:textColorHint="#6E8697"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@+id/materialCardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <TextView
                        android:id="@+id/completedOrdersTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:visibility="visible"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/hind_siliguri_font"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#000000"
                        android:textColorHint="#6E8697"
                        android:textSize="22sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/completedOrdersTextViewBottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/hind_siliguri_font"
                        android:gravity="center"
                        android:text="Completed"
                        android:textColor="#000000"
                        android:textColorHint="#6E8697"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:id="@+id/cardViewCancelledOrders"
                android:layout_weight="0.20"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@+id/materialCardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <TextView
                        android:id="@+id/cancelledOrdersTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:visibility="visible"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/hind_siliguri_font"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#000000"
                        android:textColorHint="#6E8697"
                        android:textSize="22sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/hind_siliguri_font"
                        android:gravity="center"
                        android:text="Cancelled"
                        android:textColor="#000000"
                        android:textColorHint="#6E8697"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productsRecyclerView"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/priceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hind_siliguri_font"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:text=""
            android:textColor="@color/divider_text_color_1"
            android:textSize="14sp"
            android:padding="4dp"
            android:layout_marginBottom="1px"
            android:textStyle="bold"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
